<p id="notice"><%= notice %></p>
<div id="articles-index">
<h1>Listing Articles</h1>
<div class="card white">
	<div class="card-content">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', admin_article_path(article), class: "btn waves-effect waves-light blue black-text" %></td>
        <td><%= link_to 'Edit', edit_admin_article_path(article), class: "btn waves-effect waves-light blue darken black-text" %></td>
        <td><%= link_to 'Delete', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red darken-4 white-text" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
	</div>
<br>

<%= link_to 'New Article', new_admin_article_path , class: "btn waves-effect waves-light green accent-3 black-text" %>
</div>
