<p id="notice"><%= notice %></p>
<div class="admin-container">
<h1>Listing Pages</h1>
<div class="card white">
	<div class="card-content">
	<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.body %></td>
        <td><%= link_to 'Show', admin_page_path(page), class: "btn waves-effect waves-light blue black-text" %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(page), class: "btn waves-effect waves-light blue black-text" %></td>
        <td><%= link_to 'Delete', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red darken-4 white-text" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

	</div>
</div>
<br>

<%= link_to 'New Page', new_admin_page_path, class: "btn waves-effect waves-light green accent-3 black-text" %>
</div>
