<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %>
			U dun goofed:
			</h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<%end%>

	<div class="field">
		<strong><%= f.label :name %></strong><br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<strong><%= f.label :email %></strong><br>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<strong><%= f.label :username %></strong><br>
		<%= f.text_field :username %>
	</div>
	<div class="field">
		<strong><%= f.label :password %></strong><br>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<strong><%= f.label :password_confirm %></strong><br>
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit 'create user account' %>
	</div>
<%end%>
